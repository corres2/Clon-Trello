extends layout

block content
  script(src="/socket.io/socket.io.js")
  script(src="/js/signin.js")
  div(class="content-fluid ")
      div(class="row text-center panel panel-primary")
        .panel-heading
            a( href="/" style="color:white; text-decoration:none; ")
              h1.font_Xisfani
                img(src="/images/logo3.png" style="width:40px; height=40px;")
                | Trello
      div(class="col-md-11 col-md-offset-2 col-xs-12 col-sm-12")
        div(class="col-md-8 col-xs-8 col-sm-8")
           div(class="panel panel-info")
              .panel-heading
                h4(class="text-center")
                    |   Registro
              .panel-body
                .row
                  div(class="list-group col-md-8 col-md-offset-2")
                      div(class="list-group-item active text-center")
                        h4.list-group-item-heading 
                        input(type="text" class="form-control" id="nombre" placeholder="Nombre de usuario" required)
                        br
                        input(type="email" class="form-control" id="correo" placeholder="Correo Electronico" required)
                        br
                        input(type="password" class="form-control" id="pass" placeholder="Password" required)
                        br
                        a(class="btn btn-success col-md-offset-0" id="guardar")
                          | Sign up for Github
                        a(class="btn btn-danger col-md-offset-1" id="cancelar")
                          | Cancelar
                div(class="row" id="listnew")
        div(class="col-md-3 col-xs-3 col-sm-3")
              .panel-body
