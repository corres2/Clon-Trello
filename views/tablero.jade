extends layout

block content
  script(src="/socket.io/socket.io.js")
  script(src="/js/listas.js")
  div(class="content-fluid ")
      div(class="row text-center panel panel-primary")
        .panel-heading
            h1.font_Xisfani
              img(src="/images/logo3.png" style="width:40px; height=40px;")
              | Trelloo
      div(class="col-md-12")
        div(class="col-md-9 col-xs-9 col-sm-9")
           div(class="panel panel-info")
              .panel-heading
                h4#nn
                    |   #{nombre}
              .panel-body
                .row
                  div(class="list-group col-md-3")
                      div(class="list-group-item active text-center")
                        h4.list-group-item-heading Agregar nueva lista
                        input(type="text" class="form-control" id="addlist" placeholder="Nombre de la nueva lista")
                        br
                        a(class="btn btn-success col-md-offset-0" id="guardar")
                          | Guardar
                        a(class="btn btn-danger col-md-offset-1" id="cancelar")
                          | Cancelar
                div(class="row" id="listnew")
        div(class="col-md-3 col-xs-3 col-sm-3")
           div(class="panel panel-info")
              .panel-heading
                h4#nn
                    |   Notificaciones
              .panel-body
                div(class="list-group col-md-13 col-xs-13 col-sm-13")
                  a(href="/tablero" class="list-group-item list-group-item-warning text-left")
                    h4.list-group-item-heading Nombre del usuario
                    p.list-group-item-text
                    | Este tablero fue dise√±ado exclusivamente para pruebas 
