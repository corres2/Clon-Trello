extends layout

block content
  script(src="/socket.io/socket.io.js")
  script(src="/js/login.js")
  div(class="content-fluid ")
      div(class="row text-center panel panel-primary")
        .panel-heading
            h1.font_Xisfani
              img(src="/images/logo3.png" style="width:40px; height=40px;")
              | Trelloo
      div(class="col-md-12")
        div(class="col-md-9 col-xs-9 col-sm-9")
           div(class="panel panel-info")
              .panel-heading
                h4
                    |   Sign Up
              .panel-body
                .row
                  div(class="list-group col-md-3")
                      div(class="list-group-item active text-center")
                        h4.list-group-item-heading Sign Up
                        input(type="text" class="form-control" id="nombre" placeholder="Nombre")
                        input(type="text" class="form-control" id="correo" placeholder="Correo Electronico")
                        input(type="text" class="form-control" id="pass" placeholder="Password")
                        br
                        a(class="btn btn-success col-md-offset-0" id="guardar")
                          | Sign up for Github
                        a(class="btn btn-danger col-md-offset-1" id="cancelar")
                          | Cancelar
                div(class="row" id="listnew")
        div(class="col-md-3 col-xs-3 col-sm-3")
              .panel-body
